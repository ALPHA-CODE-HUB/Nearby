<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Client.account.contact_us">

    <RelativeLayout
        android:id="@+id/rl11"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@drawable/taskbar">

        <LinearLayout
            android:id="@+id/lil1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="110dp"
                android:layout_marginTop="15dp"

                android:fontFamily="@font/poppins_medium"
                android:gravity="center"
                android:text="Nearby"
                android:textColor="@color/white"
                android:textSize="34sp" />

            <ImageView
                android:layout_width="55dp"
                android:layout_height="35dp"
                android:layout_marginTop="17dp"
                android:src="@drawable/logo4" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/lil1"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/calltv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:fontFamily="@font/poppins_medium"
                android:text="Call to speak with us"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/b1"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape2"
                android:backgroundTint="@color/white"
                android:fontFamily="@font/poppins_medium"
                android:text="Call now"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold"
                app:backgroundTint="@null" />


        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rl11">

        <TextView
            android:id="@+id/tww1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/poppins_medium"
            android:text="Or email us"
            android:textSize="40dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/b2"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/tww1"
            android:layout_centerInParent="true"

            android:background="@drawable/shape2"
            android:backgroundTint="@color/blue1"
            android:fontFamily="@font/poppins_medium"
            android:text="Email-us"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold"
            app:backgroundTint="@null" />

    </RelativeLayout>


</RelativeLayout>